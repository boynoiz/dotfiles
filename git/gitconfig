[core]
  autocrlf = input
  editor = micro
  filemode = false
  trustctime = false
  whitespace = fix
  excludesFile = '~/.gitignore'

[include]
  path = ~/.dotfiles/git/config.d/aliases
[include]
  path = ~/.dotfiles/git/config.d/delta
[include]
  path = ~/.dotfiles/git/config.d/theme
[include]
  path = ~/.dotfiles/git/config.d/lfs

[push]
  default = current

[fetch]
  prune = true
  rebase = true

[pull]
  default = current
  prune = true
  rebase = true

[commit]
  gpgsign = true

[init]
  defaultBranch = main

[gpg]
    program = "/usr/bin/gpg"

[tag]
    gpgsign = true

[includeIf "gitdir:~/.dotfiles/**"]
    path=~/.dotfiles/git/users/personal-gitconfig
